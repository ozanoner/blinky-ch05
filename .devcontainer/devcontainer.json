{
    "name": "ESP-IDF v5.5",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces,type=bind",
    "workspaceFolder": "/workspaces",
    "initializeCommand": "mkdir -p ${localWorkspaceFolder}/.devcontainer/tmp && cp ~/.gitconfig ${localWorkspaceFolder}/.devcontainer/tmp/gitconfig 2>/dev/null || touch ${localWorkspaceFolder}/.devcontainer/tmp/gitconfig",
    "mounts": [
        "source=extensionCache,target=/root/.vscode-server/extensions,type=volume",
        "source=/dev,target=/dev,type=bind",
        "source=${localWorkspaceFolder}/.devcontainer/tmp/gitconfig,target=/root/.gitconfig,type=bind"
    ],
    "runArgs": [
        "--privileged"
    ],
    "postCreateCommand": "git config --system --add safe.directory ${containerWorkspaceFolder}",
    "customizations": {
        "settings": {
            "terminal.integrated.defaultProfile.linux": "bash",
            "idf.espIdfPath": "/opt/esp/idf",
            "idf.toolsPath": "/opt/esp",
            "idf.gitPath": "/usr/bin/git",
            "idf.pythonBinPath": "/opt/esp/python_env/idf5.4_py3.12_env/bin/python"
        }
    },
    "containerEnv": {
        "LC_ALL": "C.UTF-8",
        "LANG": "C.UTF-8"
    }
}